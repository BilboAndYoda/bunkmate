<center><h2>Forgot your password?</h2></center>
<div class="w3-container w3-section w3-border w3-round-xlarge">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>


<%= render "devise/shared/links" %>
<% end %>
</div>
